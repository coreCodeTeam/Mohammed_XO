<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tictactoe.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textplayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player1:0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textplayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textplayer1"
            android:text="Player2:0"
            android:textSize="30sp" />

        <Button
          android:layout_below="@+id/textplayer2"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@+id/textplayer1"
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="35sp" />
    </RelativeLayout>

    <GridLayout
        android:layout_gravity="center"
        android:columnCount="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button10"
            android:layout_column="0"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button11"
            android:layout_column="1"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button12"
            android:layout_column="2"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button20"
            android:layout_column="0"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button21"
            android:layout_column="1"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button22"
            android:layout_column="2"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button00"
            android:layout_column="0"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button01"
            android:layout_column="1"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="50dp"
            android:freezesText="true"
            android:id="@+id/button02"
            android:layout_column="2"
            android:background="#DDDF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </GridLayout>
</LinearLayout>

